<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".view.activity.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/write"
        tools:context=".view.activity.MainActivity">

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_above="@+id/footerLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"/>

            <com.mikepenz.iconics.view.IconicsButton
                android:id="@+id/btn_lbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:minLines="2"
                android:textColor="@color/black"
                android:background="@color/write"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:text="{faw-map-marker}  找附近的垃圾車"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"/>

            <com.mikepenz.iconics.view.IconicsButton
                android:id="@+id/btn_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:minLines="2"
                android:textColor="@color/black"
                android:background="@color/write"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:text="{faw-search}  依行政區查詢"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"/>

            <com.mikepenz.iconics.view.IconicsButton
                android:id="@+id/btn_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:minLines="2"
                android:textColor="@color/black"
                android:background="@color/write"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:text="{faw-recycle}  垃圾分類小幫手"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"/>

            <com.mikepenz.iconics.view.IconicsButton
                android:id="@+id/btn_tpfix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:minLines="2"
                android:textColor="@color/black"
                android:background="@color/write"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:text="{faw-question-circle}  台北市資源回收及廚餘限時收受點"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"/>

            <com.mikepenz.iconics.view.IconicsButton
                android:id="@+id/btn_npfix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:minLines="2"
                android:textColor="@color/black"
                android:background="@color/write"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:text="{faw-question-circle}  新北市定點清運查詢"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/footerLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:orientation="horizontal">
        </LinearLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:theme="@style/NavigationDrawerStyle"
            android:background="@color/color_drawer_background"
            app:itemIconTint="#333"
            app:itemTextColor="#333"
            app:menu="@menu/nav_drawer_items" />

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
